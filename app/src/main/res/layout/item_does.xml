<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/titledoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Buy whiskas"
            android:textColor="#000c5d"
            android:textSize="20dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/mmedium"

            />

        <TextView
            android:id="@+id/descdoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearly market good to"
            android:textColor="#Adadad"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mlight"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datedoes"
            android:autofillHints="18sp"
            android:text="Tommorrow"
            android:fontFamily="@font/mlight"
            android:layout_marginTop="8dp"
            android:textColor="#f63ea5"
            />


    </LinearLayout>

</LinearLayout>